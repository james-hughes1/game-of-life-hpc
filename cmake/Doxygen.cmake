set(DOXYGEN_FILE_PATTERNS *.cpp *.h)
set(DOXYGEN_GENERATE_HTML YES)
set(DOXYGEN_HTML_OUTPUT ${PROJECT_SOURCE_DIR}/docs/html)
set(DOXYGEN_GENERATE_LATEX YES)
set(DOXYGEN_LATEX_OUTPUT ${PROJECT_SOURCE_DIR}/docs/latex)
