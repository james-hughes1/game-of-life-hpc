find_package(Doxygen)
set(DOXYGEN_WARNINGS YES)
set(DOXYGEN_WARN_IF_DOC_ERROR YES)
set(DOXYGEN_WARN_NO_PARAMDOC YES)
set(DOXYGEN_WARN_LOGFILE ./doxygen.out)
set(DOXYGEN_EXCLUDE_PATTERNS *.txt *.doc)
